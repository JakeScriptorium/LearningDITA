 <learningAssessmentbody>
  <lcInteraction>
   <lcMatching id="tablesq3">
    <lcQuestion>Associez les éléments table CALS suivants avec leur fonction.</lcQuestion>
    <lcMatchTable>
     <lcMatchingPair>
      <lcItem>&lt;tgroup></lcItem>
      <lcMatchingItem>Défini les colonnes, les lignes, les entêtes et les pieds</lcMatchingItem>
     </lcMatchingPair>
     <lcMatchingPair>
      <lcItem>&lt;colspec></lcItem>
      <lcMatchingItem>Spécifie les largeurs et les intervalles</lcMatchingItem>
     </lcMatchingPair>
     <lcMatchingPair>
      <lcItem>&lt;table></lcItem>
      <lcMatchingItem>Le conteneur principal pour un tableau</lcMatchingItem>
     </lcMatchingPair>
     <lcMatchingPair>
      <lcItem>&lt;tbody></lcItem>
      <lcMatchingItem>Contient les colonnes et les lignes</lcMatchingItem>
     </lcMatchingPair>
     <lcMatchingPair>
      <lcItem>&lt;entry></lcItem>
      <lcMatchingItem>Une simple cellule du tableau</lcMatchingItem>
     </lcMatchingPair>
    </lcMatchTable>
   </lcMatching>
  </lcInteraction>
 </learningAssessmentbody>
